<%- include('partials/simple-header') %>
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h2 class="h5 mb-0">Find Nearby Students</h2>
                    </div>
                    <div class="card-body">
                        <form id="searchForm" class="needs-validation" novalidate>
                            <div class="mb-3">
                                <label for="studentName" class="form-label">Student Name</label>
                                <input type="text" class="form-control" id="studentName" required 
                                       placeholder="Enter student's full name">
                                <div class="invalid-feedback">
                                    Please enter a student name.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="maxDistance" class="form-label">Maximum Distance (miles)</label>
                                <input type="number" class="form-control" id="maxDistance" 
                                       min="0.1" max="10" step="0.1" value="1" required>
                                <div class="form-text">
                                    Search radius in miles (0.1 to 10 miles)
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-1"></i> Find Rides
                            </button>
                        </form>
                    </div>
                </div>

                <div id="loading" class="text-center my-4 d-none">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Searching for nearby students...</p>
                </div>

                <div id="results" class="mt-4">
                    <!-- Results will be displayed here -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Form validation
        (function () {
            'use strict'
            
            const form = document.getElementById('searchForm');
            
            form.addEventListener('submit', async function (event) {
                event.preventDefault();
                event.stopPropagation();
                
                if (!form.checkValidity()) {
                    form.classList.add('was-validated');
                    return;
                }
                
                await searchRides();
            });
        })();
        
        async function searchRides() {
            const studentName = document.getElementById('studentName').value.trim();
            const maxDistance = parseFloat(document.getElementById('maxDistance').value) || 1;
            const resultsDiv = document.getElementById('results');
            const loadingDiv = document.getElementById('loading');
            
            // Show loading indicator
            loadingDiv.classList.remove('d-none');
            resultsDiv.innerHTML = '';
            
            try {
                const response = await fetch('/find-rides/search', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ studentName, maxDistance })
                });
                
                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.error || 'Error finding rides');
                }
                
                const data = await response.json();
                displayResults(data);
            } catch (error) {
                console.error('Error:', error);
                resultsDiv.innerHTML = `
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        ${error.message || 'An error occurred while searching for rides. Please try again.'}
                    </div>
                `;
            } finally {
                loadingDiv.classList.add('d-none');
            }
        }
        
        function displayResults(data) {
            const { student, nearbyStudents } = data;
            const resultsDiv = document.getElementById('results');
            
            let html = `
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h3 class="h5 mb-0">Results for ${student.name}</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Grade:</strong> ${student.grade || 'N/A'}</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Address:</strong> ${student.address || 'N/A'}</p>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            if (nearbyStudents.length === 0) {
                html += `
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        No students found within ${document.getElementById('maxDistance').value} miles.
                    </div>
                `;
            } else {
                html += `
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="h5 mb-0">Nearby Students</h4>
                        <span class="badge bg-primary">${nearbyStudents.length} found</span>
                    </div>
                    <div class="row g-4">
                `;
                
                nearbyStudents.forEach(student => {
                    html += `
                        <div class="col-12">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h5 class="card-title mb-1">${student.name}</h5>
                                            <p class="text-muted small mb-2">${student.grade || 'Grade not specified'}</p>
                                        </div>
                                        <span class="badge bg-primary">${student.distance}</span>
                                    </div>
                                    
                                    <div class="mb-2">
                                        <p class="mb-1"><strong>Parent:</strong> ${student.parentName || 'N/A'}</p>
                                        <p class="mb-1"><strong>Address:</strong> ${student.address || 'N/A'}</p>
                                        <p class="mb-0"><strong>Contact:</strong> ${student.contactInfo || 'N/A'}</p>
                                    </div>
                                    
                                    ${student.contactInfo ? `
                                        <div class="mt-3">
                                            <a href="mailto:${student.contactInfo}" class="btn btn-sm btn-outline-primary me-2">
                                                <i class="fas fa-envelope me-1"></i> Email
                                            </a>
                                        </div>
                                    ` : ''}
                                </div>
                            </div>
                        </div>
                    `;
                });
                
                html += '</div>'; // Close row
            }
            
            resultsDiv.innerHTML = html;
        }
    </script>
    <%- include('partials/simple-footer') %>
